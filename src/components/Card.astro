---
export interface Props {
  title: string
  body: string
  href: string
}

const { href, title, body } = Astro.props
---

<li class="border-2 p-4">
  <a href={href}>
    <h2 class="text-xl font-semibold pb-2">
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
